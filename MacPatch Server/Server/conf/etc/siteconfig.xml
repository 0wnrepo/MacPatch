<?xml version="1.0"?>
<settings>
	<paths>
		<base>/Library/MacPatch</base>
		<content>/Library/MacPatch/Content/Web</content>
	</paths>
	<users>
		<admin>
			<name>mpadmin</name>
			<pass>*mpadmin*</pass>
		</admin>
	</users>
	<ldap>
		<server>[AD-DOMAIN-FQDN]</server>
		<searchbase>[AD-SEARCH-BASE]</searchbase>
		<attributes>givenname,initials,sn,mail,memberOf,dn,samAccountName,userPrincipalName</attributes>
		<port>[AD-DOMAIN-PORT]</port>
		<secure>[AD-DOMAIN-SSL]</secure>
		<loginAttr>[AD-LOGIN-ATTR]</loginAttr>
		<loginUsrPrefix>[AD-LOGIN-PRE]</loginUsrPrefix>
		<loginUsrSufix>[AD-LOGIN-SUF]</loginUsrSufix>
	</ldap>
	<database>
		<prod>
			<dsName>mpds</dsName>
			<hoststring>jdbc:mysql://[DB-HOST]:[DB-PORT]/[DB-NAME]?cacheResultSetMetadata=false&amp;autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull</hoststring>
			<drivername>com.mysql.jdbc.Driver</drivername>
			<databasename>[DB-NAME]</databasename>
			<username>[DB-USER]</username>
			<password>[DB-PASS-RO]</password>
			<maxconnections>500</maxconnections>
			<logintimeout>30</logintimeout>
			<connectiontimeout>30</connectiontimeout>
			<connectionretries>2</connectionretries>
		</prod>
		<ro>
			<dsName>mpdsro</dsName>
			<hoststring>jdbc:mysql://[DB-HOST]:[DB-PORT]/[DB-NAME]?cacheResultSetMetadata=false&amp;autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull</hoststring>
			<drivername>com.mysql.jdbc.Driver</drivername>
			<databasename>[DB-NAME]</databasename>
			<username>mpdbro</username>
			<password>[DB-PASS-RO]</password>
			<maxconnections>100</maxconnections>
			<logintimeout>30</logintimeout>
			<connectiontimeout>30</connectiontimeout>
			<connectionretries>2</connectionretries>
		</ro>
	</database>	
	<mailserver>
		<server>127.0.0.1</server>
		<username>bObama</username>
		<password>imdumberthanarock</password>
	</mailserver>
</settings>
